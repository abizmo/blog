.post
  h3.post--title {{ post.title }}
  p.post--date Submited by 
    span.author {{ post.author.name }} 
    | on {{ post.date | date: 'MMM dd, y HH:mm'}}
  p.post--body {{ post.body }}
  .center(ng-show="isLoggedIn() && isOwner()")
    a.button.button--edit(href="/posts/{{ post._id }}/edit") Edit
    button.button.button--delete(ng-click="deletePost(post)") Delete
    
  

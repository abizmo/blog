.post
  h3.post--title Login
  form.form(name='form', ng-submit='vm.login(form)', novalidate='')
    .form-group
      label Email
      input(type='email', name='email', ng-model='vm.user.email')
    .form-group
      label Password
      input(type='password', name='password', ng-model='vm.user.password')

    .form-group
      p.help-block(ng-show='form.email.$error.required && form.password.$error.required && vm.submitted')
        | Please enter your email and password.

    .form-group
      button(type='submit')
        | Login
